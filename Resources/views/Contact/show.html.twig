{% extends admin_layout %}

{% block layout %}
    <ol class="breadcrumb">
        <li>
            <a href="{{ path('rcmAdminIndex') }}">Administration</a>
        </li>
        <li>
            <a href="{{ path('admin_contact') }}">
                Contacts
            </a>
        </li>
        <li class="active">
            Voir un contact
        </li>
    </ol>

    <table class="table">
        <tbody>
        <tr>
            <th>Nom</th>
            <td>{{ entity.name }}</td>
        </tr>
        <tr>
            <th>Téléphone</th>
            <td>{{ entity.phone }}</td>
        </tr>
        <tr>
            <th>Email</th>
            <td>{{ entity.email }}</td>
        </tr>
        <tr>
            <th>Message</th>
            <td>
                <div class="well">
                    {{ entity.message|nl2br  }}
                </div>

            </td>
        </tr>
        <tr>
            <th>Date</th>
            <td>Reçu le {{ entity.date|date('d/m/Y \\à H:i:s') }}</td>
        </tr>
        <tr>
            <th>Ip</th>
            <td>{{ entity.ip }}</td>
        </tr>
        </tbody>
    </table>

    {{ form(delete_form) }}

{% endblock %}
